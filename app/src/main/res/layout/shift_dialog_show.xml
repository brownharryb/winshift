<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shift_dialog_show_layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_700_color"
    android:orientation="vertical">
    <TextView
        android:id="@+id/hint2_calculated_shift_on_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_white"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="shift1"/>
    <TextView
        android:id="@+id/hint_calculated_shift_on_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_white"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="shift1"/>

    <TextView
        android:id="@+id/calculated_shift_on_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="Calculated Shift"/>

</LinearLayout>